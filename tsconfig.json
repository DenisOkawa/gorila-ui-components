{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@gorilainvest/ui-toolkit/directives": [
        "dist/directives",
        "libs/directives/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/arrow-variation": [
        "dist/arrow-variation",
        "libs/ui/arrow-variation/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/button": [
        "dist/button",
        "libs/ui/button/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/card-container": [
        "dist/card-container",
        "libs/ui/card-container/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/countdown-button": [
        "dist/countdown-button",
        "libs/ui/countdown-button/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/enhanced-title": [
        "dist/enhanced-title",
        "libs/ui/enhanced-title/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/loading": [
        "dist/loading",
        "libs/ui/loading/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/popup-confirm": [
        "dist/popup-confirm",
        "libs/ui/popup-confirm/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/section-title": [
        "dist/section-title",
        "libs/ui/section-title/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/slide-toggle": [
        "dist/slide-toggle",
        "libs/ui/slide-toggle/src/index.ts"
      ],
      "@gorilainvest/ui-toolkit/spinner": [
        "dist/spinner",
        "libs/ui/spinner/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
