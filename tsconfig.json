      ],
      "@gorilainvest/ui-toolkit/section-title": [
        "libs/ui/section-title/src/index.ts",
        "dist/section-title"
      ],
      "@gorilainvest/ui-toolkit/slide-toggle": [
        "libs/ui/slide-toggle/src/index.ts",
        "dist/slide-toggle"
      ],
      "@gorilainvest/ui-toolkit/spinner": [
        "libs/ui/spinner/src/index.ts",
        "dist/spinner"
      ],
      "@gorilainvest/shell/buttons-indicators": [
        "libs/shell/buttons-indicators/src/index.ts"
      ],
      "@gorilainvest/shell/controls": ["libs/shell/controls/src/index.ts"],
      "@gorilainvest/shell/layout": ["libs/shell/layout/src/index.ts"],
      "@gorilainvest/shell/popups-modals": [
        "libs/shell/popups-modals/src/index.ts"
      ],
      "@gorilainvest/shell/presentational": [
        "libs/shell/presentational/src/index.ts"
      ],
      "@gorilainvest/gdk": ["libs/gdk/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
