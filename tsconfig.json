{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@gorilainvest/directives": [
        "libs/directives/src/index.ts",
        "dist/directives"
      ],
      "@gorilainvest/ui/arrow-variation": [
        "libs/ui/arrow-variation/src/index.ts",
        "dist/arrow-variation"
      ],
      "@gorilainvest/ui/button": [
        "libs/ui/button/src/index.ts",
        "dist/button"
      ],
      "@gorilainvest/ui/card-container": [
        "libs/ui/card-container/src/index.ts",
        "dist/card-container"
      ],
      "@gorilainvest/ui/countdown-button": [
        "libs/ui/countdown-button/src/index.ts",
        "dist/countdown-button"
      ],
      "@gorilainvest/ui/enhanced-title": [
        "libs/ui/enhanced-title/src/index.ts",
        "dist/enhanced-title"
      ],
      "@gorilainvest/ui/loading": [
        "libs/ui/loading/src/index.ts",
        "dist/loading"
      ],
      "@gorilainvest/ui/popup-confirm": [
        "libs/ui/popup-confirm/src/index.ts",
        "dist/popup-confirm"
      ],
      "@gorilainvest/ui/section-title": [
        "libs/ui/section-title/src/index.ts",
        "dist/section-title"
      ],
      "@gorilainvest/ui/slide-toggle": [
        "libs/ui/slide-toggle/src/index.ts",
        "dist/slide-toggle"
      ],
      "@gorilainvest/shell/buttons-indicators": [
        "libs/shell/buttons-indicators/src/index.ts"
      ],
      "@gorilainvest/shell/controls": [
        "libs/shell/controls/src/index.ts"
      ],
      "@gorilainvest/shell/layout": [
        "libs/shell/layout/src/index.ts"
      ],
      "@gorilainvest/shell/popups-modals": [
        "libs/shell/popups-modals/src/index.ts"
      ],
      "@gorilainvest/shell/presentational": [
        "libs/shell/presentational/src/index.ts"
      ],
      "@gorilainvest/gdk": [
        "libs/gdk/src/index.ts"
      ],
      "@gorilainvest/ui/scroll-container": [
        "libs/ui/scroll-container/src/index.ts"
      ]
    },
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
