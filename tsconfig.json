{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@gorilainvest/ui-toolkit/directives": [
        "libs/directives/src/index.ts",
        "dist/directives"
      ],
      "@gorilainvest/ui-toolkit/arrow-variation": [
        "libs/ui/arrow-variation/src/index.ts",
        "dist/arrow-variation"
      ],
      "@gorilainvest/ui-toolkit/button": [
        "libs/ui/button/src/index.ts",
        "dist/button"
      ],
      "@gorilainvest/ui-toolkit/card-container": [
        "libs/ui/card-container/src/index.ts",
        "dist/card-container"
      ],
      "@gorilainvest/ui-toolkit/countdown-button": [
        "libs/ui/countdown-button/src/index.ts",
        "dist/countdown-button"
      ],
      "@gorilainvest/ui-toolkit/enhanced-title": [
        "libs/ui/enhanced-title/src/index.ts",
        "dist/enhanced-title"
      ],
      "@gorilainvest/ui-toolkit/loading": [
        "libs/ui/loading/src/index.ts",
        "dist/loading"
      ],
      "@gorilainvest/ui-toolkit/popup-confirm": [
        "libs/ui/popup-confirm/src/index.ts",
